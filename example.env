# SmartHomeLite Environment Configuration
# Copy this file to .env and modify as needed

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
DEBUG_MODE=true

# Bluetooth Configuration
BLUETOOTH_SCAN_INTERVAL=60  # in seconds
BLUETOOTH_AUTO_CONNECT=false

# MQTT Configuration (Optional)
MQTT_ENABLED=false
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_TOPIC_PREFIX=smarthome/

# Voice Recognition Configuration (Optional)
VOICE_ENABLED=false
VOICE_ENGINE=vosk  # Options: vosk, google
VOICE_TRIGGER_PHRASE=hey smart home

# API Security
API_KEY_REQUIRED=false
API_KEY=

# Data Storage
DATA_DIR=./data